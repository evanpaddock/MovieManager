@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <header class="text-center">
        <h1 class="display-3">🍿 Welcome to Movie Manager 🌟</h1>
        <p class="lead">Where magic happens in the world of cinema and celebrity!</p>
    </header>

    <div class="mt-5">
        <h2>Discover the Enchantment:</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">🎬 Movie Magic 🍀</h3>
                        <p class="card-text">Unleash the power of movies!</p>
                        <ul>
                            <li>Manage your movie collection effortlessly.</li>
                            <li>
                                Enchanting movie details:
                                <ul>
                                    <li>Title 🌠</li>
                                    <li>IMDB Hyperlink 🌐</li>
                                    <li>Genre 🧙‍♂️</li>
                                    <li>Year of Release 📅</li>
                                    <li>Poster or Media 📸</li>
                                </ul>
                            </li>
                            <li>Delve into the Reddit realm for movie discussions.</li>
                            <li>Witness the sentiment of the crowd (skipping the boring ones!).</li>
                            <li>Discover the enchanting sentiment analysis of your chosen movie! ✨</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">🌟 Actor's Guild 🎭</h3>
                        <p class="card-text">Celebrities' secrets revealed!</p>
                        <ul>
                            <li>Manage your favorite actors like a pro director.</li>
                            <li>
                                Meet your beloved stars:
                                <ul>
                                    <li>Name 🌟</li>
                                    <li>Gender 🚻</li>
                                    <li>Age ⌛</li>
                                    <li>IMDB Hyperlink 🌐</li>
                                    <li>See their glamorous photos! 📸</li>
                                </ul>
                            </li>
                            <li>Dive into the Redditverse to follow the latest buzz about actors.</li>
                            <li>Feel the emotions expressed in tweets (skipping the dull ones!).</li>
                            <li>Reveal the mesmerizing sentiment analysis of your chosen actor! 🌠</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h2>✨ Magical Connections ✨</h2>
        <p>Link actors to movies and witness the extraordinary connections unfold!</p>
    </div>
